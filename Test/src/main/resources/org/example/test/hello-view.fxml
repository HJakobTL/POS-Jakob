<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<VBox alignment="TOP_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.test.HelloController"
      style="-fx-background-color: #f7f7f7; -fx-padding: 30;">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="ETAPPE HINZUFÜGEN"
           style="-fx-font-weight: bold;
                  -fx-font-size: 18pt;
                  -fx-text-fill: #333333;"/>

    <Label fx:id="welcomeText" style="-fx-border-width: 0 0 1 0; -fx-border-color: #cccccc; -fx-pref-width: 500;"/>

    <GridPane hgap="10" vgap="15" alignment="CENTER"
              style="-fx-padding: 15; -fx-border-radius: 5; -fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);">

        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" prefWidth="100"/>
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="Ziel-Ort:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="zielOrtField" promptText="Name des Zielortes" text="" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-border-color: #aaaaaa; -fx-border-radius: 3;"/>

        <Label text="Länge (km):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="laengeField" promptText="Distanz in Kilometern (Ganzzahl)" text="" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-border-color: #aaaaaa; -fx-border-radius: 3;"/>

        <Label text="Sieger:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="siegerField" promptText="Name des Etappensiegers" text="" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-border-color: #aaaaaa; -fx-border-radius: 3;"/>

        <Label text="Zeitangabe" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2" style="-fx-font-weight: bold; -fx-padding: 5 0 0 0;"/>

        <Label text="Stunden:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="stundenField" promptText="Stunden" text="" GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-border-color: #aaaaaa; -fx-border-radius: 3;"/>

        <Label text="Minuten:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="minutenField" promptText="Minuten (0-59)" text="" GridPane.rowIndex="5" GridPane.columnIndex="1" style="-fx-border-color: #aaaaaa; -fx-border-radius: 3;"/>
    </GridPane>

    <Button text="ETAPPE HINZUFÜGEN" onAction="#addEtappe" maxWidth="Infinity"
            style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-font-size: 14pt;"/>

    <Button text="RUNDFAHRT ÜBERSICHT ANZEIGEN" onAction="#onHelloButtonClick" maxWidth="Infinity"
            style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>

</VBox>